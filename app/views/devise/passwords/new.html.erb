<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
:html => { :method => :put , :class => "form-signin"}) do |f| %>  <%= devise_error_messages! %>

  <div class="control-group">
	<div class="controls"><%= f.label :email %>
  		<%= f.email_field :email %>
  	</div>
  </div>

  <div class="control-group">
	<div class="controls">
		<%= f.submit "Reset password instructions", :class => "btn btn-large btn-primary" %>
	</div>
</div>

<%= render "devise/shared/links" %>
<% end %>

