<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin"}) do |f| %>
<h2>Sign in</h2>

<div class="control-group">
<div class="controls">
   <%= f.email_field :email, :placeholder => "Email address", :class => "input-xlarge" %>
</div>
</div> 

<div class="control-group">
<div class="controls">
   <%= f.password_field :password, :placeholder => "Password", :class => "input-xlarge" %>
</div>
</div>

<div class="control-group">
<div class="controls">
  <label class="checkbox">
    <% if devise_mapping.rememberable? -%>
	  <%= f.check_box :remember_me %> Remember me
		<% end -%>
  </label>
  <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
</div>
</div>

<%= render "devise/shared/links" %>
<% end %>